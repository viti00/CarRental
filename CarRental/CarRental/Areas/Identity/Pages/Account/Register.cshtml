@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}
@section Styles{
    <link rel="stylesheet" href="~/css/CreateAndEditPages.css" />
}

<div class="section">
    <div class="color-overlay"></div>
    <div class="wrapper col-sm-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="logo">
                <img src="~/lib/Images/logo.png" alt="">
            </div>
            <div class="text-center mt-4 name">
                <h2>@ViewBag.Title</h2>
            </div>
            <div class="form-group">
                <label asp-for=Input.Email>Имейл<span class="text-danger">*</span></label>
                <input asp-for="Input.Email" class="form-control" placeholder="example@abv.bg">
                <span asp-validation-for="Input.Email" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=Input.UserName>Потребителско име<span class="text-danger">*</span></label>
                <input asp-for="Input.UserName" class="form-control" placeholder="example123">
                <span asp-validation-for="Input.UserName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=Input.Password>Парола<span class="text-danger">*</span></label>
                <input asp-for="Input.Password" type="password" autocomplete="new-password" class="form-control">
                <span asp-validation-for="Input.Password" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for=Input.ConfirmPassword>Потвърди парола<span class="text-danger">*</span></label>
                <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" class="form-control">
                <span asp-validation-for="Input.ConfirmPassword" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn custom-btn">Регистрация</button>

        </form>
        <div style="height: 100%" class="text-center mt-3">
            <a asp-page="Login" style="color: black">Вече имате акаунт?</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
