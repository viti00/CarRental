@page
@model CarRental.Pages.Cars.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Car.MakeId" class="control-label">Марка:</label>
                <select asp-for="Car.MakeId" id="make-select" class ="form-control" asp-items="ViewBag.MakeId"><option value=0></option></select>
                <span asp-validation-for="Car.MakeId" class="text-danger"></span>
                <div class="text-danger">
                    @Html.ValidationMessage("Make")
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Car.Model" class="control-label">Модел:</label>
                <select asp-for="Car.Model" id="model-select" class="form-control" disabled></select>
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.HorsePower" class="control-label">Конски сили:</label>
                <input asp-for="Car.HorsePower" class="form-control" />
                <span asp-validation-for="Car.HorsePower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.FuelConsumption" class="control-label">Разход на гориво(100км):</label>
                <input asp-for="Car.FuelConsumption" class="form-control" />
                <span asp-validation-for="Car.FuelConsumption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.PricePerDay" class="control-label">Дневна цена:</label>
                <input asp-for="Car.PricePerDay" class="form-control" />
                <span asp-validation-for="Car.PricePerDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.City" class="control-label">Град:</label>
                <input asp-for="Car.City" class="form-control" />
                <span asp-validation-for="Car.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label">Година на производство:</label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.EngineId" class="control-label">Тип двигател:</label>
                <select asp-for="Car.EngineId" class ="form-control" asp-items="ViewBag.EngineId"><option value=0></option></select>
                <span asp-validation-for="Car.EngineId" class="text-danger"></span>
                <div class="text-danger">
                    @Html.ValidationMessage("Engine")
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Car.CategoryId" class="control-label">Категория:</label>
                <select asp-for="Car.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"><option value=0></option></select>
                <span asp-validation-for="Car.CategoryId" class="text-danger"></span>
                <div class="text-danger">
                    @Html.ValidationMessage("Category")
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Car.TransmissionId" class="control-label">Скоростна кутия:</label>
                <select asp-for="Car.TransmissionId" class ="form-control" asp-items="ViewBag.TransmissionId"><option value=0></option></select>
                <span asp-validation-for="Car.TransmissionId" class="text-danger"></span>
                <div class="text-danger">
                    @Html.ValidationMessage("Transmission")
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Добави" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script src="/js/FillModels.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
