@page
@model CarRental.Pages.Tenants.CreateModel

@{
    ViewData["Title"] = "Заявка за наемател";
}

@section Styles{
   <link rel="stylesheet" href="~/css/CreateAndEditPages.css"/>
}

    <div class="section">
    <div class="color-overlay"></div>
    <div class="wrapper col-sm-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
       <form method="post" enctype="multipart/form-data">
           <div class="logo">
                <img src="~/lib/Images/logo.png" alt="">
            </div>
            <div class="text-center mt-4 name">
                <h2>@ViewBag.Title</h2>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RentalApproveRequest.FirstName">Име:<span class="text-danger">*</span></label>
                <input asp-for="RentalApproveRequest.FirstName" class="form-control">
                <span asp-validation-for="RentalApproveRequest.FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalApproveRequest.LastName">Фамилия:<span class="text-danger">*</span></label>
                <input asp-for="RentalApproveRequest.LastName" class="form-control">
                <span asp-validation-for="RentalApproveRequest.LastName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalApproveRequest.PhoneNumber">Телефон:<span class="text-danger">*</span></label>
                <input asp-for="RentalApproveRequest.PhoneNumber" class="form-control"/>
                <span asp-validation-for="RentalApproveRequest.PhoneNumber" class="small text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="RentalApproveRequest.DrivingLicenseNumber">Номер на шофьорска книжка:<span class="text-danger">*</span></label>
                <input asp-for="RentalApproveRequest.DrivingLicenseNumber" class="form-control"/>
                <span asp-validation-for="RentalApproveRequest.DrivingLicenseNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalApproveRequest.Files">Моля качете снимки от двете страни на шофьорската си книжка:<span class="text-danger">*</span></label>
                <input asp-for="RentalApproveRequest.Files"  name="files" class="form-control" type="file" multiple/>
                <span asp-validation-for="RentalApproveRequest.Files" class="small text-danger"></span>
                <div class="text-danger">
                    @Html.ValidationMessage("File")
                </div>
            </div>
            <button type="submit" class="btn custom-btn">Подай заявка</button>
        </form>
    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
